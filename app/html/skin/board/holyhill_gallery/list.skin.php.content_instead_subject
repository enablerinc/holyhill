<?php
if (!defined('_GNUBOARD_')) exit;
add_stylesheet('<link rel="stylesheet" href="'.$board_skin_url.'/style.css">', 0);

// 게시글 목록 가져오기
$list = array();
for ($i=0; $i<count($write_table); $i++) {
    $list[] = $write_table[$i];
}
?>

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<section id="bo_list" class="max-w-2xl mx-auto">
    
    <!-- 헤더 -->
    <div class="flex items-center justify-between mb-4 p-4">
        <h2 class="text-2xl font-bold text-gray-800">
            <i class="fa-solid fa-cross text-purple-600 mr-2"></i>
            <?php echo $board['bo_subject'] ?>
        </h2>
        <?php if ($write_href) { ?>
        <a href="<?php echo $write_href ?>" class="px-4 py-2 bg-purple-600 text-white rounded-lg font-semibold hover:bg-purple-700">
            <i class="fa-solid fa-pen mr-1"></i>
            글쓰기
        </a>
        <?php } ?>
    </div>

    <!-- 게시글 목록 -->
    <div class="space-y-4">
        <?php
        for ($i=0; $i<count($list); $i++) {
            $wr_id = $list[$i]['wr_id'];
            
            // 작성자 정보
            $mb_nick = $list[$i]['wr_name'];
            $mb_photo = G5_THEME_URL.'/img/no-profile.svg';
            
            if ($list[$i]['mb_id']) {
                $mb = sql_fetch("SELECT mb_nick, mb_photo FROM {$g5['member_table']} WHERE mb_id = '{$list[$i]['mb_id']}'");
                if ($mb) {
                    $mb_nick = $mb['mb_nick'];
                    if ($mb['mb_photo']) {
                        $mb_photo = G5_DATA_URL.'/member/'.$mb['mb_photo'];
                    }
                }
            }
            
            // 첫 번째 이미지
            $first_image = '';
            $img = sql_fetch("SELECT bf_file FROM {$g5['board_file_table']} WHERE bo_table = '{$bo_table}' AND wr_id = '{$wr_id}' AND bf_type BETWEEN 1 AND 3 ORDER BY bf_no LIMIT 1");
            if ($img) {
                $first_image = G5_DATA_URL.'/file/'.$bo_table.'/'.$img['bf_file'];
            }
            
            $view_href = G5_BBS_URL.'/board.php?bo_table='.$bo_table.'&amp;wr_id='.$wr_id;
        ?>
        
        <article class="bg-white rounded-2xl shadow-sm overflow-hidden">
            <!-- 작성자 -->
            <div class="p-4 flex items-center gap-3 border-b">
                <img src="<?php echo $mb_photo; ?>" class="w-10 h-10 rounded-full" alt="">
                <div class="flex-1">
                    <div class="font-semibold text-gray-800"><?php echo $mb_nick; ?></div>
                    <div class="text-xs text-gray-500"><?php echo date('Y-m-d', strtotime($list[$i]['wr_datetime'])); ?></div>
                </div>
            </div>
            
            <!-- 이미지 -->
            <?php if ($first_image) { ?>
            <a href="<?php echo $view_href; ?>">
                <img src="<?php echo $first_image; ?>" class="w-full h-64 object-cover cursor-pointer hover:opacity-95 transition-opacity" alt="">
            </a>
            <?php } ?>
            
            <!-- 액션 -->
            <div class="p-4">
                <div class="flex items-center gap-4 mb-3">
                    <button class="flex items-center gap-2">
                        <i class="fa-solid fa-heart text-red-400 text-xl"></i>
                        <span class="text-sm text-gray-600">아멘 <?php echo number_format($list[$i]['wr_good']); ?>개</span>
                    </button>
                    <a href="<?php echo $view_href; ?>" class="flex items-center gap-2">
                        <i class="fa-regular fa-comment text-xl text-gray-600"></i>
                        <span class="text-sm text-gray-600"><?php echo number_format($list[$i]['wr_comment']); ?></span>
                    </a>
                </div>
                
                <!-- 제목 & 내용 -->
                <a href="<?php echo $view_href; ?>" class="block">
                    <div class="mb-2">
                        <span class="font-semibold text-gray-800 mr-2"><?php echo $mb_nick; ?></span>
                        <span class="text-gray-800"><?php echo strip_tags($list[$i]['wr_subject']); ?></span>
                    </div>
                    <p class="text-sm text-gray-600 line-clamp-2">
                        <?php echo strip_tags($list[$i]['wr_content']); ?>
                    </p>
                </a>
            </div>
        </article>
        
        <?php } ?>
        
        <?php if ($i == 0) { ?>
        <div class="text-center py-20 text-gray-500">
            <i class="fa-regular fa-comment text-4xl mb-4"></i>
            <p>첫 게시글을 작성해보세요!</p>
        </div>
        <?php } ?>
    </div>

    <!-- 페이징 -->
    <?php if ($list_pages) { ?>
    <div class="mt-6 text-center">
        <?php echo $list_pages; ?>
    </div>
    <?php } ?>

</section>
